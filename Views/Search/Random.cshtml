@model List<RandomMovie>

<partial name="_Search" />

        <div class ="form-group text-center" style="margin-left:20%;margin-top:2%;width:60%;text-align:center">
            <p style="font-size:20px;font-family:Segoe UI,Arial,sans-serif;color:#6666ff ;text-shadow:2px 2px #bbbbbb;font-weight:400">Not interested in these results? Try again!</p>
        </div>
<br />
    <div class ="container" style="text-align:center;background-color:#150c25;color:#c2c2c2">
                <div class="row">
                    <div class="col-sm">
                        Poter
                    </div>
                      
                      <div class="col-sm">
                        ID
                    </div>
                      <div class="col-sm">
                        Title
                    </div>
                      <div class="col-sm">
                        Release Date
                    </div>
                     <div class="col-sm">
                            Plot
                    </div>

                      <div class="col-sm">
                        Type
                    </div>
                    <div class ="col-sm">
                        Genre
                    </div>

                </div>

                
            </div>
   <div class="container" style="border:2px solid #c2c2c2">

           @foreach(RandomMovie movie in Model)
        {
       <div class="row" style="text-align:center;border-bottom:solid #bcbcbc 1px;">
         
       
            <div class="col-sm">
               <img src="@movie.Poster" alt="Sorry, no picture provided" style="width:70px;height:85px;margin-right:20px;margin-bottom:2px;margin-left:15px"/>
               </div>

               <div class="col-sm">
               <p><a href="https://www.imdb.com/title/@movie.imdbID">@movie.imdbID</a></p>
               </div>

               <div class="col-sm">
               <p>@movie.Title</p>
               </div>

               <div class="col-sm">
               <p>@movie.Released</p>            
               </div>

               <button class ="collapsible">View summary for "@movie.Title"
                <div class="content col-sm">
                    <p>@movie.Plot</p>            
                </div>
               </button>
               

               <div class="col-sm">
               <p>@movie.Type</p>            
               </div>

                <div class="col-sm">
               <p>@movie.Genre</p>            
               </div>
               
               
       </div>
       }
   
   </div>
                                
                              
                    

                         
                       
                    