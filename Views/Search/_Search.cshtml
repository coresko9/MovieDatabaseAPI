
<div>
@using (Html.BeginForm("SearchAPI", "Search" ))
{
    <form> 
        <div class ="form-group text-center" style="margin-left:20%;margin-top:2%;width:60%;text-align:center">
            <p style="font-size:28px;font-family:Segoe UI,Arial,sans-serif;color:#6666ff ;text-shadow:2px 2px #bbbbbb;font-weight:400">Find your favorite movies</p>
            
            <input type="text" class="form-control" name="movieTitle"   placeholder="Search a movie">
                <br/>
                
            <button class="btn btn-info" style="display:inline-block;background-color:#6666ff;opacity:1.2" type ="submit">
                <span class="glyphicon glyphicon-search"></span> Search
            </button> 
            <button class="btn btn-info" style="display:inline-block;background-color:#6666ff;opacity:1.2" asp-action="Random" method="post">
                <span class="glyphicon glyphicon-random"></span> Random
            </button> 
   
            </div>
    </form>
}
</div>
