@model MovieDataBase.Models.Movie

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete @Model.Title?</h3>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="imdbID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <button type="submit" asp-action="Index" class="btn btn-info" style="border-color:#444444 ;background-color:#444444">Cancel</button>
    </form>
</div>
